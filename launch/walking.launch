<launch>
    <arg name="imu" default="true"/>
    <rosparam file="$(find mini_ros)/config/walkingParam.yaml">
    </rosparam> 

<group if="$(arg imu)">
        <node ns="imu" name="imu_node" pkg="imu_bno055" type="bno055_i2c_node" respawn="true" respawn_delay="2">
        <param name="device" type="string" value="/dev/i2c-1"/>
        <param name="address" type="int" value="40"/> <!-- 0x28 == 40 is the default for BNO055 -->
        <param name="frame_id" type="string" value="imu"/>
        </node>
    </group>
    <node name="walking" pkg="mini_ros" type="walking_node" respawn="false" output="screen" required = "true"/>
</launch>